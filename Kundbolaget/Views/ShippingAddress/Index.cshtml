@model IEnumerable<Kundbolaget.Models.EntityModels.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingAddresses)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.ActionLink(item.Id.ToString(), "Details", new {id = item.Id})
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrganizationNumber)
        </td>
        <td>
            @Html.DropDownListFor(model => item.ShippingAddresses, new SelectList(item.ShippingAddresses, "Id", "Street"), "Leverandsadresser", new { @class = "form-control" })
        </td>
            
        <td>
            @Html.ActionLink("Lägg till adress", "Create", new { id = item.Id }, new { @class = "btn btn-primary"})
        </td>    
    </tr>
}

</table>
