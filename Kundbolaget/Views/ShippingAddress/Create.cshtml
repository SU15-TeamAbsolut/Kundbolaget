@model Kundbolaget.Models.EntityModels.Address

@{
    ViewBag.Title = "Create";
}

<h2>Skapa ny</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Leveransadresser</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
            @Html.Partial("_Address", Model)
      
        <div class="form-group">
            <label class="control-label col-md-1">Land</label>
            @Html.Partial("_CountryDropDownList")
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skapa" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tillbaka", "Index",null, new {@class = "btn btn-primary" })
</div>
