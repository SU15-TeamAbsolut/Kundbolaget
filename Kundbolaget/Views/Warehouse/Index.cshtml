@model IEnumerable<Kundbolaget.Models.EntityModels.Warehouse>

@{
    ViewBag.Title = "Index";
}

<h2>Lagerlokaler</h2>

<p>
    @Html.ActionLink("Lägg till lager","Create", null, new { @class="btn btn-primary"} )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.Street),
            @Html.DisplayFor(modelItem => item.Address.ZipNumber),
            @Html.DisplayFor(modelItem => item.Address.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactId)
        </td>
        <td>
            @Html.ActionLink("Redigera", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
