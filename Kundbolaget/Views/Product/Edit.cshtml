@model Kundbolaget.Models.ViewModels.ProductCategoryViewModel

@{
    ViewBag.Title = "Edit";
}
<h2>Redigera</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>@Html.DisplayFor(model => model.Product.Name)</h4>
    <hr />
    <div class="form-horizontal" style="width: 50%; padding-left: 30px;">
        
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Product.Id)
        @Html.HiddenFor(model => model.Product.AlcoholPercentage)

        <div class="form-group">
            @Html.LabelFor(model => model.Product.Name, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-5">
                @Html.EditorFor(model => model.Product.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Product.Name, "", new {@class = "text-danger"})
            </div>
        </div>
        @Html.Partial("_CategoryDropDownList")
        <div class="form-group">
            @Html.LabelFor(model => model.Product.Description, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Product.Description, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Product.Description, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product.Volume, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-5">
                @Html.EditorFor(model => model.Product.Volume, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Product.Volume, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Product.PackageAmount, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-5">
                @Html.EditorFor(model => model.Product.PackageAmount, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Product.PackageAmount, "", new {@class = "text-danger"})
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.Product.AccountingCode, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-5">
                @Html.EditorFor(model => model.Product.AccountingCode, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Product.AccountingCode, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product.VatCode, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-5">
                @Html.EditorFor(model => model.Product.VatCode, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Product.VatCode, "", new {@class = "text-danger"})
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group col-md-10">
        @Html.ActionLink("Tillbaka", "Index", null, new { @class = "btn btn-primary" }) |
        <input type="submit" value="Spara" class="btn btn-primary" />
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
