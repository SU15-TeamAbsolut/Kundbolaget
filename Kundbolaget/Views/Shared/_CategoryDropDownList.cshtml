@model Kundbolaget.Models.ViewModels.ProductCategoryViewModel


    <div class="form-group">
        @Html.LabelFor(model => model.ProductCategory, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DropDownListFor(m => m.Product.ProductCategoryId, new SelectList(Model.ProductCategories, "Id", "Name"), "Välj kategori", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductCategory.Id, "", new { @class = "text-danger" })
        </div>
    </div>

