@model Kundbolaget.Models.EntityModels.Customer

@{
    ViewBag.Title = "Edit";
}

<h2>Redigera</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kund</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-1"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new {@class = "control-label col-md-1"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CreditLine, htmlAttributes: new {@class = "control-label col-md-1"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.CreditLine, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.CreditLine, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PaymentTerm, htmlAttributes: new {@class = "control-label col-md-1"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.PaymentTerm, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.PaymentTerm, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AccountingCode, htmlAttributes: new {@class = "control-label col-md-1"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.AccountingCode, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AccountingCode, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.OrganizationNumber, htmlAttributes: new {@class = "control-label col-md-1"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.OrganizationNumber, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.OrganizationNumber, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Besöksadress", htmlAttributes: new { @class = "control-label col-md-1", style = "font-size: 20px;" })
        </div>
        <div class="form-group">
            <label class="control-label col-md-1">Land</label>
            @Html.Partial("_CountryDropDownList", Model.VisitingAddress, new ViewDataDictionary() { TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "VisitingAddress" } })
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => Model.VisitingAddressId)
            @Html.Partial("_Address", Model.VisitingAddress, new ViewDataDictionary() {TemplateInfo = new TemplateInfo() {HtmlFieldPrefix = "VisitingAddress"}})
        </div>
        <div class="form-group">
            @Html.Label("Faktuereringsadress", htmlAttributes: new {@class = "control-label col-md-1", style = "font-size: 20px;"})
        </div>
        <div class="form-group">
            <label class="control-label col-md-1">Land</label>
            @Html.Partial("_CountryDropDownList", Model.InvoiceAddress, new ViewDataDictionary() { TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "InvoiceAddress" } })
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => Model.InvoiceAddressId)
            @Html.Partial("_Address", Model.InvoiceAddress, new ViewDataDictionary() {TemplateInfo = new TemplateInfo() {HtmlFieldPrefix = "InvoiceAddress"}})
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => Model.ContactId)
            @Html.Partial("_Contact")
        </div>
        <hr/>
        <div class="form-group col-md-10">
            @Html.ActionLink("Tillbaka", "Index", null, new {@class = "btn btn-primary"}) |
            <input type="submit" value="Spara" class="btn btn-primary"/>
        </div>
    </div>

}