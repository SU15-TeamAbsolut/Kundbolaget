@model IEnumerable<Kundbolaget.Models.EntityModels.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Alkohollicenser</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlcoholLicense.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlcoholLicense.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlcoholLicense.IsValid)
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlcoholLicense.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlcoholLicense.EndDate)
        </td>
        @if (item.AlcoholLicense == null)
        {
            <td>Licens saknas</td>
        }
        else
        {
            if (item.AlcoholLicense.IsValid)
            {
                <td>Giltig</td>
            }
            else
            {
                <td>Ej giltig</td>
            }
        }

        @if (item.AlcoholLicense == null)
        {
            <td>
                @Html.ActionLink("Lägg till", "Create", new {id = item.Id})
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id })
            </td>
        }
    </tr>
}

</table>
