@model Kundbolaget.Models.EntityModels.Order

@{
    ViewBag.Title = "CreateOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Skapa ny order</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => Model.Customer.Id)
                @Html.HiddenFor(m => Model.Customer.Id)
                @Html.HiddenFor(m => Model.Customer.Name)
                @Html.HiddenFor(m => Model.Customer.OrganizationNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerOrderRef, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.CustomerOrderRef, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShippingAddressId, "Leveransadress", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.ShippingAddressId, new SelectList(Model.Customer.ShippingAddresses, "Id", "Street"), new { @class = "form-control" })
               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderPlaced, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DisplayFor(model => model.OrderPlaced, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.OrderPlaced)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DesiredDeliveryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DesiredDeliveryDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.DesiredDeliveryDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group col-md-3"style="padding-left: 5%">
                @Html.ActionLink("Avbryt", "CustomerIndex", null, new { @class = "btn btn-primary" })
                <input type="submit" value="Lägg till artiklar" class="btn btn-primary"/>
        </div>
    </div>
}

