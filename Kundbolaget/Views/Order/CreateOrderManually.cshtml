@model Kundbolaget.Models.ViewModels.ManualOrderViewModel

@{
    ViewBag.Title = "CreateOrderManually";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Lägg till orderrader", "CreateOrderRowManually",new {customerId = Model.Order.CustomerId, orderId = Model.Order.Id}, new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Orderrad Id")
        </th>
        <th>
            @Html.DisplayName("Produktnamn")
        </th>
        <th>
           @Html.DisplayName("Pris")
        </th>
        <th>
           @Html.DisplayName("Rabatt")
        </th>
        <th>
          @Html.DisplayName("Antal")
        </th>
        
        <th></th>
    </tr>

@for (int i = 0; i < Model.Order.OrderRows.Count; i++) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Order.OrderRows[i].Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Order.OrderRows[i].Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Order.OrderRows[i].Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Order.OrderRows[i].Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Order.OrderRows[i].AmountOrdered)
        </td>
    </tr>
}

</table>
